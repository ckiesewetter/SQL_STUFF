<!-- This is for updating the form of the contact info form. This needs to be done for each individual value to show that you can change each value. -->
<form action="/update/<%= @contact.id %>" method="GET">
  <input type="text" value="<%= @contact.given_name %>" name="given_name" placeholder="First name" autofocus required/>
<br>
  <input type="text" value="<%= @contact.family_name %>" name="family_name" placeholder="Last name" required/>
<br>
  <input type="text" name="email" value="<%= @contact.email %>" placeholder="Email address" required/>
<br>
  <input type="text" name="address" value="<%= @contact.address %>" placeholder="Home address" required/>
<br>
<br>
  <input type="submit" value="Register a user" />
</form>
