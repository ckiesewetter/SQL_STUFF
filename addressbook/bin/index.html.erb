<h1>Welcome!</h1>
<!-- <p>Find me in app/views/users/index.html.erb</p> -->

<form action="/register" method="GET">
  <input type="text" name="given_name" placeholder="First name" autofocus required/>
<br>
  <input type="text" name="family_name" placeholder="Last name" required/>
<br>
  <input type="text" name="email" placeholder="Email address" required/>
<br>
  <input type="text" name="address" placeholder="Home address" required/>
<br>
<br>
  <input type="submit" value="Register a user" />
</form>
<br>
<table>
<% @contacts.each do |contact| %>
<br>
  <tr>
    <td>
    <%= contact.family_name %>
  </td>
  <td>
    <%= contact.given_name %>
  </td>
  <td>
    <%= contact.email %>
  </td>
  <td>
    <%= contact.address %>
  </td>
  <td>
    <a href= "/users/edit/<%=contact.edit %>">edit</a>
  </td>
  </tr>
  <% end %>

</table>
